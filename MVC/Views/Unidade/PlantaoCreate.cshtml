@using Data.Entities;
@model Data.DTOs.MedicoDTO


<section class="crud-atendimento py-5">
    <div class="container">
        <div class="container_inputs">
            <div class="container">
                <h1 class="my-5 text-center">Cadastre os dado do médico.</h1>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <div class="col">
                                <label for="ids_Especialidades" class="form-label">Especialidade:</label>
                                <select required class="js-example-basic-single form-select" style="width:100%" multiple aria-label="Selecione uma opção">
                                    @foreach (Medico medico in ViewBag.MedicosList)
                                    {
                                        <option value="@medico.id">@medico.nome</option>

                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="horainicio" class="form-label">Hora Inicio:</label>
                            <input class="form-control" type="time" id="horainicio" name="horainicio">
                        </div>
                        <div class="col">
                            <label for="horaiofim" class="form-label">Hora Fim:</label>
                            <input class="form-control" type="time" id="horariofim" name="horaiofim">
                        </div>
                    </div>
                </div>
                <div class="submit-button d-flex justify-content-end align-items-center">
                    <button type="submit">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</section>